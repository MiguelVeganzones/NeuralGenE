{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc debug build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-fdiagnostics-show-template-tree",
                "-fsanitize=memory",
                "-fsanitize=undefined",
                "-fsanitize-stats",
                "-g",
				"-Wall",
                "-Wextra",
                "-Wshadow",
                "-Wconversion",
                "-Wpedantic",
				"-Werror",
                "-std=c++2b",
                "-I ${workspaceFolder}/Utility",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-v"

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: /usr/bin/gcc"
        },   
		{
            "type": "cppbuild",
            "label": "C/C++: gcc release build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-fdiagnostics-show-template-tree",
                "-O3",
				"-Wall",
                "-Wextra",
                "-Wshadow",
                "-Wconversion",
                "-Wpedantic",
				"-Werror",
                "-std=c++2b",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
			],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}